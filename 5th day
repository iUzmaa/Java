// Online Java Compiler
// Use this editor to write, compile and run your Java code online
import java.util.*;
class HelloWorld {
   public static void Cal(int a,int b)
   {
       if(a>b)
       {
           System.out.println("Greater is a:- "+a);//here we write return a also;;
       }
       else
       {
           System.out.println("Greater is:-"+b);
       }
   }
   public static void main(String args[])
   {
       Scanner sc = new Scanner(System.in);
       int a = sc.nextInt();
       int b= sc.nextInt();
       Cal(a,b);
   }
   
}
//curcumfrn
// Online Java Compiler
// Use this editor to write, compile and run your Java code online
import java.util.*;
class HelloWorld {
   public static void Cal(int r)
   {
      double res = 2*3.14*r;
     System.out.println("circumfrnce is : - "+res);
   }
   public static void main(String args[])
   {
       Scanner sc = new Scanner(System.in);
       int r = sc.nextInt();
       
       Cal(r);
       
   }
   
}


